.item-image {
  width: 60px;
  height: 60px;
  margin-right: 8px;
  cursor: pointer;
}
.item-name {
  font-weight: bold;
}

.item-quantity {
  margin-top: 4px;
}
.page-title{
  margin-top: 10%;
}

.search-box{
  margin-top: 5%;
}
.form-group{
  margin-bottom: 100px;
}
.image-container{
  width: 100px;
}



.product-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 10px;
}

.product-item {
  width: 48%;
  margin-bottom: 10px;
  padding: 10px;
  background-color: #f5f5f5;
  border-radius: 4px;
  box-sizing: border-box;
}
.product-item-son {
  width: 248%;
  margin-bottom: 10px;
  padding: 10px;
  background-color: #f5f5f5;
  border-radius: 4px;
  box-sizing: border-box;
}
.product-image {
  width: 100%;
  height: 200px;
  margin-bottom: 10px;
}

