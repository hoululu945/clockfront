.container {
  padding: 16px;
  margin-top: 30px;
}

.search-box {
  display: flex;
  align-items: center;
  margin-bottom: 16px;
}

.search-input {
  flex: 1;
  height: 32px;
  padding: 0 8px;
  border: 1px solid #ccc;
  border-radius: 16px;
}

.result-list {
  margin-top: 16px;
}

.result-item {
  display: flex;
  align-items: center;
  padding: 8px;
  border: 1px solid #ccc;
  border-radius: 4px;
  margin-bottom: 8px;
  width: 300px;
}
.item-label {
  font-weight: bold;
  margin-bottom: 4px;
  background-color:darkgoldenrod;
}
/* .item-image {
